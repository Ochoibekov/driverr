<%= @driver.name %><br>
<%= @driver.last_name %><br>
<%= @driver.pin %><br>
<%= @driver.passport_number %><br>
<%= @driver.passport_series %><br>
<% if @driver.image.attached? %>
	<img src="<%= url_for @driver.image %>" alt="" width="100px" height="100px"><br>
<% end %>
<% @comments.where(driver_id: @driver.id).each do |comment| %>
	<%= comment.user.email %> : <br>
	<%= comment.short_desc %><br>
	<%= comment.long_desc %><br>
<% end %>
<%= link_to 'add comment', drivers_comment_new_path %>
